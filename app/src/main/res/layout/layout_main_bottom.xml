<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@color/cBackground"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_xian"
        android:background="@color/cXian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:id="@+id/ll_main_tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_tab1"
                android:layout_width="@dimen/space_frame_large3"
                android:layout_height="@dimen/space_frame_large3"
                android:src="@drawable/sl_bg_home_page" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/home_page"
                android:textColor="@drawable/sl_color_main_tab"
                android:textSize="@dimen/textSize_smallest" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_tab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_tab2"
                android:layout_width="@dimen/space_frame_large3"
                android:layout_height="@dimen/space_frame_large3"
                android:src="@drawable/sl_bg_work" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/workbench"
                android:textColor="@drawable/sl_color_main_tab"
                android:textSize="@dimen/textSize_smallest" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_tab3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_tab3"
                android:layout_width="@dimen/space_frame_large3"
                android:layout_height="@dimen/space_frame_large3"
                android:src="@drawable/sl_bg_my" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/my"
                android:textColor="@drawable/sl_color_main_tab"
                android:textSize="@dimen/textSize_smallest" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>